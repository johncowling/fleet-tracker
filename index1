<body>
    <div class="container">
        <h1>Fleet Status Tracker</h1>
        
        <div class="table-wrapper">
            <table id="fleetTable">
                <thead>
                    <tr>
                        <th>Fleet</th>
                        <th>Fitted and Working</th>
                        <th>Fitted not Working</th>
                        <th>Fitted no Signal</th>
                        <th>Missing</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                </tbody>
            </table>
        </div>
        
        <div class="info-box">
            <strong>Note:</strong> Each fleet can only have one status. Selecting "Yes" in any column will automatically clear the others for that fleet.
        </div>
    </div>

    <script>
        const fleetNumbers = [641, 644, 645, 682, 5400, 5401, 5402, 5403, 5404, 5405, 5406, 5407, 5408, 5409, 5410, 5411, 5412, 5413, 5490, 5492, 5493, 5494, 5495, 5496, 5497, 6043, 6044, 6045, 6046, 6047, 6048, 6072, 6074, 6157, 6177, 6179, 6181, 6182, 6184, 6185, 6190, 6191, 6192, 6195, 6216, 6217, 6218, 6219, 6232, 6233, 6234, 6235, 6236, 6237, 6238, 6239, 6240, 6336, 6337, 6338, 6339, 6340, 6341, 6342, 6343, 6344, 6345, 6346, 6347, 6348, 6349, 6350, 6351, 6949, 6950];
        const columns = ['Fitted and Working', 'Fitted not Working', 'Fitted no Signal', 'Missing'];
        const data = {};

        function createTableRows() {
            const tbody = document.getElementById('tableBody');
            
            fleetNumbers.forEach(fleet => {
                const row = document.createElement('tr');
                
                const fleetCell = document.createElement('td');
                fleetCell.className = 'fleet-cell';
                fleetCell.textContent = fleet;
                row.appendChild(fleetCell);
                
                columns.forEach(column => {
                    const cell = document.createElement('td');
                    const select = document.createElement('select');
                    
                    const optionEmpty = document.createElement('option');
                    optionEmpty.value = '';
                    optionEmpty.textContent = '--';
                    select.appendChild(optionEmpty);
                    
                    const optionYes = document.createElement('option');
                    optionYes.value = 'Yes';
                    optionYes.textContent = 'Yes';
                    select.appendChild(optionYes);
                    
                    const optionNo = document.createElement('option');
                    optionNo.value = 'No';
                    optionNo.textContent = 'No';
                    select.appendChild(optionNo);
                    
                    select.addEventListener('change', (e) => handleChange(fleet, column, e.target.value));
                    
                    cell.appendChild(select);
                    row.appendChild(cell);
                });
                
                tbody.appendChild(row);
            });
        }

        function handleChange(fleet, column, value) {
            const key = `${fleet}-${column}`;
            
            if (value === 'Yes') {
                columns.forEach(col => {
                    const colKey = `${fleet}-${col}`;
                    if (col !== column) {
                        data[colKey] = '';
                    }
                });
                data[key] = 'Yes';
                updateUI(fleet);
            } else if (value === 'No') {
                data[key] = '';
                updateUI(fleet);
            }
        }

        function updateUI(fleet) {
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                const fleetCell = row.querySelector('.fleet-cell');
                if (parseInt(fleetCell.textContent) === fleet) {
                    const selects = row.querySelectorAll('select');
                    selects.forEach((select, idx) => {
                        const column = columns[idx];
                        const key = `${fleet}-${column}`;
                        select.value = data[key] || '';
                    });
                }
            });
        }

        // Initialize table
        createTableRows();
    </script>
</body>
</html>
